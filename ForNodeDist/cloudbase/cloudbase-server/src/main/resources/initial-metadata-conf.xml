<?xml version="1.0"?>
<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>

    <property>
      <name>cloudbase.tablet.io.seqfile.compress.blocksize</name>
      <value>32000</value>
	  <description>Overrides the hadoop io.seqfile.compress.blocksize setting
	               so that map files have better query performance.</description>
    </property>

	<property>
	  <name>cloudbase.tablet.dfs.replication</name>
	  <value>5</value>
	</property>

	<property>
	  <name>cloudbase.tablet.majorCompaction.threshold</name>
	  <value>1</value>
	</property>

	<property>
	  <name>cloudbase.tablet.majorCompaction.keep</name>
	  <value>0</value>
	</property>

	<property>
	  <name>cloudbase.tablet.split.threshold</name>
	  <value>134217728</value>
	</property>

	<property>
	  <name>cloudbase.tablet.cache.enable</name>
	  <value>false</value>
	</property>

	<property>
	  <name>cloudbase.tablet.cache.size</name>
	  <value>16777216</value>
	</property>
		
	<property>
	  <name>cloudbase.table.constraint.1</name>
	  <value>cloudbase.core.constraints.MetadataConstraints</value>
	</property>
	
	<property>
	  <name>cloudbase.table.iterator.scan.vers</name>
	  <value>10,cloudbase.core.tabletserver.iterators.VersioningIterator</value>
	</property>
	
	<property>
	  <name>cloudbase.table.iterator.scan.vers.opt.maxVersions</name>
	  <value>1</value>
	</property>
	
	<property>
	  <name>cloudbase.table.iterator.minc.vers</name>
	  <value>10,cloudbase.core.tabletserver.iterators.VersioningIterator</value>
	</property>
	
	<property>
	  <name>cloudbase.table.iterator.minc.vers.opt.maxVersions</name>
	  <value>5</value>
	</property>
	
	<property>
	  <name>cloudbase.table.iterator.majc.vers</name>
	  <value>10,cloudbase.core.tabletserver.iterators.VersioningIterator</value>
	</property>

	<property>
	  <name>cloudbase.table.iterator.majc.vers.opt.maxVersions</name>
	  <value>5</value>
	</property>
	
</configuration>
