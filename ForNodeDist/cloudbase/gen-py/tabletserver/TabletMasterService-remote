import sys
import pprint
from urlparse import urlparse
from thrift.transport import TTransport
from thrift.transport import TSocket
from thrift.transport import THttpClient
from thrift.protocol import TBinaryProtocol

import TabletMasterService
from ttypes import *

if len(sys.argv) <= 1 or sys.argv[1] == '--help':
  print ''
  print 'Usage: ' + sys.argv[0] + ' [-h host:port] [-u url] [-f[ramed]] function [arg1 [arg2...]]'
  print ''
  print 'Functions:'
  print '  void sendTabletList(AuthInfo credentials)'
  print '  void loadTablet(AuthInfo credentials, KeyExtent extent, string location)'
  print '  void unloadTablet(AuthInfo credentials, KeyExtent extent, bool save)'
  print '  void shutdown(AuthInfo credentials, string serverName, i32 stage)'
  print '  void ping(AuthInfo credentials)'
  print '  void flush(AuthInfo credentials,  tables)'
  print ''
  sys.exit(0)

pp = pprint.PrettyPrinter(indent = 2)
host = 'localhost'
port = 9090
uri = ''
framed = False
http = False
argi = 1

if sys.argv[argi] == '-h':
  parts = sys.argv[argi+1].split(':') 
  host = parts[0]
  port = int(parts[1])
  argi += 2

if sys.argv[argi] == '-u':
  url = urlparse(sys.argv[argi+1])
  parts = url[1].split(':') 
  host = parts[0]
  if len(parts) > 1:
    port = int(parts[1])
  else:
    port = 80
  uri = url[2]
  http = True
  argi += 2

if sys.argv[argi] == '-f' or sys.argv[argi] == '-framed':
  framed = True
  argi += 1

cmd = sys.argv[argi]
args = sys.argv[argi+1:]

if http:
  transport = THttpClient.THttpClient(host, port, uri)
else:
  socket = TSocket.TSocket(host, port)
  if framed:
    transport = TTransport.TFramedTransport(socket)
  else:
    transport = TTransport.TBufferedTransport(socket)
protocol = TBinaryProtocol.TBinaryProtocol(transport)
client = TabletMasterService.Client(protocol)
transport.open()

if cmd == 'sendTabletList':
  if len(args) != 1:
    print 'sendTabletList requires 1 args'
    sys.exit(1)
  pp.pprint(client.sendTabletList(eval(args[0]),))

elif cmd == 'loadTablet':
  if len(args) != 3:
    print 'loadTablet requires 3 args'
    sys.exit(1)
  pp.pprint(client.loadTablet(eval(args[0]),eval(args[1]),args[2],))

elif cmd == 'unloadTablet':
  if len(args) != 3:
    print 'unloadTablet requires 3 args'
    sys.exit(1)
  pp.pprint(client.unloadTablet(eval(args[0]),eval(args[1]),eval(args[2]),))

elif cmd == 'shutdown':
  if len(args) != 3:
    print 'shutdown requires 3 args'
    sys.exit(1)
  pp.pprint(client.shutdown(eval(args[0]),args[1],eval(args[2]),))

elif cmd == 'ping':
  if len(args) != 1:
    print 'ping requires 1 args'
    sys.exit(1)
  pp.pprint(client.ping(eval(args[0]),))

elif cmd == 'flush':
  if len(args) != 2:
    print 'flush requires 2 args'
    sys.exit(1)
  pp.pprint(client.flush(eval(args[0]),eval(args[1]),))

transport.close()
