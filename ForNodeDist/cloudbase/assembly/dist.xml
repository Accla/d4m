<?xml version="1.0" encoding="UTF-8"?>
<assembly>
	<id>dist</id>
	<formats>
		<format>tar.gz</format>
	</formats>
	<baseDirectory>cloudbase-${project.version}</baseDirectory>
	<fileSets>
		<fileSet>
			<directory>bin</directory>
			<outputDirectory>bin</outputDirectory>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>assembly</directory>
			<outputDirectory>assembly</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>conf</directory>
			<outputDirectory>conf</outputDirectory>
			<excludes>
			  <exclude>**/cloudbase-site.xml</exclude>
			  <exclude>**/cloudbase-env.sh</exclude>
			  <exclude>**/slaves</exclude>
			  <exclude>**/masters</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>test</directory>
			<outputDirectory>test</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>cloudbase-examples</directory>
			<outputDirectory>cloudbase-examples</outputDirectory>
			<excludes>
				<exclude>**/target/**</exclude>
				<exclude>**/target-eclipse/**</exclude>
			</excludes>
		</fileSet>
		<fileSet>
			<directory>docs</directory>
			<outputDirectory>docs</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>cloudbase-core/target</directory>
			<outputDirectory>docs</outputDirectory>
			<includes>
				<include>apidocs/**</include>
			</includes>			
		</fileSet>		
		<fileSet>
			<directory>cloudbase-core</directory>
			<outputDirectory>cloudbase-core</outputDirectory>
			<includes>
				<include>thrift.sh</include>
			</includes>
			<fileMode>0755</fileMode>
		</fileSet>
		<fileSet>
			<directory>cloudbase-core</directory>
			<outputDirectory>cloudbase-core</outputDirectory>
			<includes>
				<include>pom.xml</include>
				<include>resources/**</include>
				<include>src/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>cloudbase-server</directory>
			<outputDirectory>cloudbase-server</outputDirectory>
			<includes>
				<include>pom.xml</include>
				<include>src/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>cloudbase-start</directory>
			<outputDirectory>cloudbase-start</outputDirectory>
			<includes>
				<include>pom.xml</include>
				<include>src/**</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>cloudbase-core/target/gen-py</directory>
			<outputDirectory>gen-py</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>cloudbase-server/target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>cloudbase*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>cloudbase-start/target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>cloudbase*.jar</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>cloudbase-examples/target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>cloudbase*.jar</include>
			</includes>
		</fileSet>		
		<fileSet>
			<directory>target/dependencies</directory>
			<outputDirectory>lib</outputDirectory>
		</fileSet>
		<fileSet>
			<directory>cloudbase-core/target</directory>
			<outputDirectory>lib</outputDirectory>
			<includes>
				<include>*javadoc.jar</include>
			</includes>
		</fileSet>				
	</fileSets>
	<files>
		<file>
			<source>pom.xml</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
		<file>
			<source>Cloudbase.README</source>
			<outputDirectory>/</outputDirectory>
			<filtered>true</filtered>
		</file>
	</files>
</assembly>
